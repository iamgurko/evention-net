@model IEnumerable<Evention.Core.Models.Event>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yaklaşan Etkinliklerim</h2>
<ul class="events voffset4">
    @foreach (var etkinlik in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @etkinlik.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @etkinlik.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @etkinlik.Venue
                </span>
                <span class="genre">
                    @etkinlik.Genre.Name
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit", "Etkinlikler", new { id = etkinlik.Id })">
                        Edit
                    </a> |
                    <a href="#" class="js-cancel-event" data-event-id="@etkinlik.Id">
                        Cancel
                    </a>
                </div>
            </div>
        </li>
    }
</ul>
@section scripts
{
    <script>
        $(document).ready(function () {
            $(".js-cancel-event").click(function (e) {
                var link = $(e.target);

                bootbox.dialog({
                    message: "İptal Etmek İstiyor Musunuz?",
                    title: "Onayla",
                    buttons: {
                        no: {
                            label: "No",
                            className: "btn-default",
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "Yes",
                            className: "btn-danger",
                            callback: function () {
                                $.ajax({
                                    url: "/api/events/" + link.attr("data-event-id"),
                                    method: "DELETE"
                                })
                                .done(function () {
                                    link.parents("li").fadeOut(function () {
                                        $(this).remove();
                                    });
                                })
                                .fail(function () {
                                    alert("Something failed!");
                                });
                            }
                        }
                    }
                });
            });
        });
    </script>
}
